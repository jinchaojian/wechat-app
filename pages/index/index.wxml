<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">Good {{period}},{{userInfo.nickName}}</text>
  </view>
  <view class="time">{{time.hours}}:{{time.minutes}}</view>
  <view class="question">What is your main focus for today?</view>
  <view class="input">
<view class="section">
  <input value="{{inputValue}}"  bindconfirm="bindKeyInput" style="text-align:center; color:white "/>
</view>
  </view>
  <view class="today">TODAY</view>
<view class="period">{{setValue}}</view>
<view class="content">{{content}}</view>
</view>

