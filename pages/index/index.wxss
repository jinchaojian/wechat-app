/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 20px;
}


.time{
  color: white;
  font-size: 80px;
}
.question{
  color: #fff;
  font-size: 20px;
}
.period{
  color: #fff;
  font-size: 25px;
}
.input{
  margin-bottom: 50px;
  border-bottom-style: solid;
  border-width: 2px;
  border-color: #fff;
}
.today{
  font-size: 25px;
  color: #fff;
}

.content{
  color: #fff;
  font-size: 15px;
  text-align: center;
  padding: 0 10rpx 0 10rpx;
}